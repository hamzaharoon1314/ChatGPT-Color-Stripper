{
    "manifest_version": 3,
    "name": "ChatGPT Color Stripper",
    "version": "1.0.7",
    "description": "Removes background colors from copied text on chat.openai.com",
    "permissions": [
      "clipboardRead",
      "clipboardWrite"
    ],
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      },
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
  
